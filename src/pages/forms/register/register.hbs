<div class={{formWrapper}}>
    <form action="" class={{form}}>
        <p class={{formTitle}}>{{title}}</p>
        <div class="{{formInputs}} formInputs">
            {{#each inputs}}
                <label data-id={{dataId}}>
                    <span class={{../inputTitle}}>{{text}}</span>
                    <input type={{type}} name={{dataId}}>
                </label>
            {{/each}}
        </div>
        <button type="submit" class={{formSubmit}}>
            {{submitButton}}
        </button>
        <a href="/login" class={{formSameBtn}}>{{enterLink}}</a>
    </form>
</div>
<div class={{chatWrapper}}>
    <section class={{chatLeftSection}}>
        <a href="" class={{profile}}>Профиль <span>></span></a>
        <input type="text" class={{search}} placeholder="&#128269;&nbsp;Поиск">
        <ul class={{chatList}}>
            {{#each data}}
                <li class={{../chatListItem}}>
                    <div class={{../chatItemWrapper}}>
                        <div class={{../chatAvatar}}>
                        </div>
                        <p class={{../chatTitle}}>{{title}}</p>
                        <p class={{../chatSubtitle}}>{{subtitle}}</p>
                        <span class={{../chatDateTime}}>{{date}}</span>
                        {{#if new}}
                            <span class={{../chatNewMessage}}>{{new}}</span>
                        {{/if}}
                    </div>
                </li>
            {{/each}}
        </ul>
    </section>
    <section class={{chatRightSection}}>
        <span>Выберите чат чтобы отправить сообщение</span>
    </section>
</div>
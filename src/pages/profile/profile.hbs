<section class={{profile__wrapper}}>
    <form>
        <div class={{profile__top}}>
            <label class={{profile__avatar}}>
                <input type="file" name="avatar" hidden>
                <img src={{avatarTmp}} alt="Avatar">
            </label>
            <p class={{avatar__name}}>Иван</p>
        </div>
        <div class={{profile__fields}}>
            <ul>
                {{{email}}}
                {{{login}}}
                {{{name}}}
                {{{lastname}}}
                {{{chatName}}}
                {{{phone}}}
            </ul>
            <div class={{profile__change}}>
                <ul>
                    {{{changeData}}}
                    {{{changePassword}}}
                    {{{exit}}}
                </ul>
            </div>
    </form>
    <div class={{back}}>
        {{{button}}}
    </div>
</section>

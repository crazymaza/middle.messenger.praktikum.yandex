{
    "plugins": [
        "stylelint-scss"
    ],
    "extends": "stylelint-config-standard",
    "customSyntax": "postcss-scss",
    "rules": {
        "at-rule-no-unknown": null,
        "scss/at-rule-no-unknown": true,
        "scss/selector-no-redundant-nesting-selector": true,
        "selector-class-pattern": null
    },
    "ignoreFiles": [
        "/node_modules/",
        "dist/*",
        "/.git/",
        "/.parcel-cache/",
        "/",
        "/.vscode/",
        "/.github/"
    ]
}

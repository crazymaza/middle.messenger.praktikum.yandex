{
    "compilerOptions": {
        "target": "es2021",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "moduleResolution": "nodenext"
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules", "dist"]
}
